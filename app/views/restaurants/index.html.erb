<div class="container">
  <div class="card-deck row justify-content-md-center">
    <% @restaurants.each do |restaurant| %>
      <div class="card col-2 m-4">
        <div class="card-body">
        <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
        <p class="card-text"><small class="text-muted"><%= restaurant.reviews.count %> reviews</small></p>
        </div>
      </div>
      <% end %>
  </div>
  <div class="justify-content-md-center">
    <%= link_to 'New restaurant', new_restaurant_path, class: "btn btn-primary text-center" %>
  </div>
</div>
